<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MenuLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="TitleLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="ListLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="TotalLayout" parent="@style/ListLayout">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AddLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">66dp</item>
    </style> 

    <style name="ListButtonLayout">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="TitleTextSize">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="ListTitleTextSize">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ButtonTextSize" parent="AddLayout">
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="PassButtonLayout">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">66dp</item>
    </style>
    
    <style name="CalcButtonLayout">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">66dp</item>
    </style>
    
    <style name="AppWidgetLayout">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>
    
    <style name="AppWidgetTextSize">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AppWidgetMonth">
        <item name="android:textSize">14sp</item>
    </style>

</resources>