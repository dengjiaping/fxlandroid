<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/title"
        style="@style/TitleLayout" >

        <TextView
            android:id="@+id/titletext"
            style="@style/TitleTextSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="@string/title_activity_tongji" />

        <ImageButton
            android:id="@+id/selectmonthbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:background="@color/whitetrans"
            android:contentDescription="@string/img_desc_selectday"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_date_s" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/listtitle"
        style="@style/ListLayout"
        android:layout_below="@+id/title"
        android:background="@color/tablebg"
        android:orientation="horizontal" >

        <TextView
            style="@style/ListTitleTextSize"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/monthtitlebg"
            android:gravity="center"
            android:text="@string/txt_category"
            android:textColor="@color/daytitle" />

        <TextView
            style="@style/ListTitleTextSize"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/monthtitlebg"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:text="@string/txt_monthprice"
            android:textColor="@color/daytitle" />
    </LinearLayout>

    <ListView
        android:id="@+id/itemlistview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/monthtotalpricetext"
        android:layout_below="@+id/listtitle"
        android:divider="@android:color/transparent" >

    </ListView>

    <TextView
        android:id="@+id/monthtotalpricetext"
        style="@style/TotalLayout"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/txt_monthprice"
        android:textColor="@color/total" />

</RelativeLayout>