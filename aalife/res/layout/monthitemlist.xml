<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListLayout"
    android:background="@color/tablebg" >

    <TextView
        android:id="@+id/itemidtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/idtext"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/txt_monthsubitemdot" />

    <TextView
        android:id="@+id/itemnametext"
        android:layout_width="128dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/txt_itemname" />

    <TextView
        android:id="@+id/itempricetext"
        android:layout_width="126dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="0.87"
        android:background="@android:color/white"
        android:gravity="right|center"
        android:paddingRight="5dp"
        android:text="@string/txt_itemprice" />

    <CheckBox
        android:id="@+id/checkboxview"
        style="@style/ListButtonLayout"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/white"
        android:button="@drawable/mycheckbox"
        android:checked="true"
        android:focusable="false" />

</LinearLayout>