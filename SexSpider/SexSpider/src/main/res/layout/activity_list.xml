<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fxlweb.sexspider.sexspider.ListActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/titleLayout"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@color/title_bar_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_activity_list"
            android:id="@+id/textView"
            android:textColor="@color/title_bar_text"
            android:gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/img_refresh"
            android:src="@drawable/ic_title_refresh"
            android:layout_alignParentRight="false"
            android:contentDescription="@string/txt_refresh"
            android:layout_toLeftOf="@+id/img_download" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/img_download"
            android:src="@drawable/ic_title_download"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/txt_download" />
    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_listview"
        android:layout_below="@+id/titleLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/titleLayout"
        android:gravity="center"
        android:id="@+id/list_empty"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txt_empty"
            android:id="@+id/textView2" />
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_loading"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>
