<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="tv_title">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
        
    <style name="btn_style">
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>
    
    <style name="user_img_style">
        <item name="android:padding">15dp</item>
    </style>
    
    <style name="btn_style_img">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="tv_item">
        <item name="android:paddingTop">@dimen/title_text_padding</item>
        <item name="android:paddingBottom">@dimen/title_text_padding</item>
    </style>

    <style name="tv_item_price" parent="tv_item">
        <item name="android:paddingRight">@dimen/title_text_padding</item>
    </style>
    
    <style name="tv_item_date" parent="tv_item">
        <item name="android:paddingLeft">@dimen/title_text_padding</item>
    </style>
    
    <style name="list_style">
        <item name="android:layout_marginBottom">42dp</item>
    </style>
    
    <style name="day_list_style">
        <item name="android:layout_marginBottom">39dp</item>
    </style>
    
    <style name="catlist_style">
        <item name="android:layout_marginBottom">48dp</item>
    </style>
    
</resources>
