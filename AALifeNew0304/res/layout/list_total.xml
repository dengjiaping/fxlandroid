<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_curdate_label"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:gravity="center"
        android:text="@string/txt_total_label" />

    <TextView
        android:id="@+id/tv_curdate_price"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:gravity="center|right"
        android:text="@string/txt_total_price" />

    <TextView
        android:id="@+id/tv_prevdate_label"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:gravity="center"
        android:text="@string/txt_total_label" />

    <TextView
        android:id="@+id/tv_prevdate_price"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@color/color_item_bg"
        android:gravity="center|right"
        android:text="@string/txt_total_price" />

</LinearLayout>