<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textSize">21sp</item>
    </style>
    
    <style name="title_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">33sp</item>
    </style>
    
    <style name="tv_title">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
        
    <style name="btn_style">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="layout_style">
        <item name="android:padding">@dimen/padding_large</item>
    </style>
    
    <style name="user_img_style">
        <item name="android:padding">@dimen/padding_medium</item>
    </style>
    
    <style name="btn_style_img">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:textSize">27sp</item>
    </style>
    
    <style name="tv_item">
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>
    
    <style name="tv_item_nav">
        <item name="android:paddingTop">@dimen/title_text_padding</item>
        <item name="android:paddingBottom">@dimen/title_text_padding</item>
    </style>
        
    <style name="tv_item_addsmart">
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="tv_item_price" parent="tv_item">
        <item name="android:paddingRight">@dimen/padding_medium</item>
    </style>
    
    <style name="tv_item_date" parent="tv_item">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
    </style>
    
    <style name="list_style">
        <item name="android:layout_marginBottom">62dp</item>
    </style>
    
    <style name="calc_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="start_lock_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">108dp</item>
        <item name="android:layout_marginRight">108dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="edit_text_style">
        <item name="android:minHeight">60dp</item>
    </style>
    
</resources>
