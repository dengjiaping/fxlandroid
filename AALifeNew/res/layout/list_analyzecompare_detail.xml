<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_analyze_itemname"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:gravity="center"
        android:text="@string/txt_analyze_itemname" />

    <TextView
        android:id="@+id/tv_analyze_countcur"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@color/color_item_bg"
        android:gravity="center"
        android:text="@string/txt_analyze_countcur" />

    <TextView
        android:id="@+id/tv_analyze_pricecur"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:gravity="right|center"
        android:text="@string/txt_analyze_itemprice" />

    <TextView
        android:id="@+id/tv_analyze_countprev"
        style="@style/tv_item"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@color/color_item_bg"
        android:gravity="center"
        android:text="@string/txt_analyze_countprev" />

    <TextView
        android:id="@+id/tv_analyze_priceprev"
        style="@style/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="2"
        android:background="@color/color_item_bg"
        android:gravity="right|center"
        android:text="@string/txt_analyze_itemprice" />

</LinearLayout>