<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:orientation="vertical"
    tools:context=".AboutsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <ImageButton
            android:id="@+id/btn_title_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_btn_selector"
            android:contentDescription="@string/txt_title_back"
            android:src="@drawable/ic_title_left" />

        <TextView
            android:id="@+id/textView1"
            style="@style/title_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/txt_tab_abouts" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/txt_empty" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/layout_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_item_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_about_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/padding_small"
                    android:text="@string/app_name"
                    android:textSize="@dimen/start_text_size" />

                <TextView
                    android:id="@+id/tv_about_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/ic_setting_update"
                    android:gravity="center"
                    android:paddingBottom="@dimen/padding_small"
                    android:text="@string/app_version" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/txt_about_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                android:background="@color/color_item_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_large"
                android:paddingRight="@dimen/padding_large" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_empty" />

                <TextView
                    android:id="@+id/tv_lab_qzone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:drawableLeft="@drawable/ic_home_qzone"
                    android:gravity="center|left"
                    android:text="@string/txt_lab_qzone" />

                <TextView
                    android:id="@+id/tv_lab_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:drawableLeft="@drawable/ic_home_qq"
                    android:gravity="center|left"
                    android:text="@string/txt_lab_qq" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_empty" />

            </LinearLayout>

            <RelativeLayout
                style="@style/layout_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_item_bg" >

                <TextView
                    android:id="@+id/tv_about_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/ic_title_email"
                    android:gravity="center"
                    android:text="@string/txt_about_email" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_about_email"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_large"
                    android:text="@string/txt_about_emailtxt"
                    android:textColor="@color/color_text" />

                <EditText
                    android:id="@+id/et_about_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/txt_about_texthint"
                    android:inputType="none"
                    android:maxLength="50"
                    android:minLines="3"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/color_text_hint" >

                    <requestFocus />
                </EditText>

                <ProgressBar
                    android:id="@+id/pb_about_sending"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_set_sure"
                    style="@style/btn_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_about_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/padding_large"
                    android:background="@drawable/main_btn_selector"
                    android:text="@string/txt_lock_sure" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
